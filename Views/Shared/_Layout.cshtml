<DOCTYPE html>
    <html>
    <head>
        <title> @ViewBag.Title | Сельский дворик</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Style.css" />
        <link rel="icon" type="image/x-icon" href="/img/icons/Logo.png">
    </head>
    <body>
        <div class="Grid backgroundOfBody">
            <header>
                <div class="Header-title">
                    <a asp-controller="Home" asp-action="Index"><h1 class="TitleOfStore">Сельский дворик</h1></a>
                </div>

                @if (Program.CurrentUser != null)
                {
                    <div class="Header-buttons">
                        <a asp-action="Carts" asp-controller="Home"> <img src="~/img/icons/Cart.svg" /> </a>
                        <a asp-action="Favorites" asp-controller="Home"> <img src="~/img/icons/Favorites.svg" /> </a>
                        <a class="super-a" asp-controller="Home" asp-action="Categories">Категории</a>
                        <a class="super-a" asp-controller="Home" asp-action="Contacts">Контакты</a>
                        <a asp-controller="Account" asp-action="LogOut"> <img class="LogOut-button" src="~/img/icons/LogOut.png" /> </a>
                    </div>
                }
                else
                {
                    <div class="Header-buttons">
                        <a class="super-a" asp-controller="Home" asp-action="Categories">Категории</a>
                        <a class="super-a" asp-controller="Home" asp-action="Contacts">Контакты</a>
                        <a asp-controller="Account" asp-action="LogIn"> <input class="btn btn-sample" type="button" value="Войти" /> </a>
                    </div>
                }
            </header>

            <div class="GridBody">
                @RenderBody()
            </div>

            <footer>
                <h5>Copyright 2023 - 2024 Алина Позова. Все права защищены.</h5>
            </footer>
        </div>
    </body>
</html>
